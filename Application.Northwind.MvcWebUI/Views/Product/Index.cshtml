@model Application.Northwind.MvcWebUI.Models.ProductListViewModel

@{
    Layout = "~/Views/_Layout.cshtml";
}
<div>
    <table class="table table-responsive table-striped">
        <tr>
            <td>ProductName</td>
            <td>Category Id</td>
            <td>Unit Price</td>
            <td>Units In Stock</td>
            <td></td>
        </tr>
        @foreach (var product in Model.ProductlList)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.CategoryId</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td><a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">add to cart</a></td>
            </tr>
        }
    </table>
</div>

<product-list-pager current-category="@Model.CurrentCategory"
                    current-page="@Model.CurrentPage"
                    page-count="@Model.PageCount"
                    page-size="@Model.PageSize"></product-list-pager>